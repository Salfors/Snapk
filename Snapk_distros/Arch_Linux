function Arch_Linux() {

    case $TODO in 

        "1")
                
            function Arch_snap() {
                if (( $EUID == 0 )); then
                    Arch_snap_error="\n${SE} You Must Be a Normal User To Inatall Snap Successfully !! ${EE}\n" 
                else   
                    git clone https://aur.archlinux.org/snapd.git 
                    cd snapd 
                    makepkg -si
                    sudo systemctl enable --now snapd.socket
                    sudo ln -s /var/lib/snapd/snap /snap
                fi
            } 
            Arch_snap ;;
                     
        "2")
                function Arch_Flatpak() {

                    sudo rm -rf /var/lib/pacman/db.lck
                    sudo pacman -S flatpak 

                }
                Arch_Flatpak ;; 
                    
                     
    	"3")
    		Arch_snap
    		Arch_Flatpak  ;;
              
    esac

}
